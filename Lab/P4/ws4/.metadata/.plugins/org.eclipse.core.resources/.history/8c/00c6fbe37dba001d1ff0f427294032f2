// Structs ------------- 
struct Direccion {
	portal:int;
	codigoPostal:int;
};

var d1:Direccion;
var d2:Direccion;

struct Persona {
	edad:int;
	direccion:Direccion;
};

// Combinaci�n de Arrays y Structs -------------
var f:[6] Persona;

struct Empresa {
	cif:[9] char;
	empleados:[10] Persona;
};

var microsoft: Empresa;