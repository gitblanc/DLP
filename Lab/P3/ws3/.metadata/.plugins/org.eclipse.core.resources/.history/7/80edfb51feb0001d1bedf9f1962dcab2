lexer grammar Lexicon;

LITENT : [0-9]+;

LITREAL : [0-9]+ '.' [0-9]+;

COMMENT : '/*' .*? '*/' -> skip;

WS : [ \t\r\n]+ -> skip;

MAS : '+';

DISTINTO : '!=';

INT : 'int';

REAL : 'real';

CASTINT : '<int>';

PRINT : 'print';

READ : 'read';

IF : 'if';

ELSE : 'else';

WHILE : 'while';

DATA : 'DATA';

CODE : 'CODE';

IGUAL : '=';

PARIZQ : '(';

PARDER : ')';

PCOMA : ';';

CORCHETEIZQ : '{';

CORCHETEDER : '}';

IDENT : [a-zA-Z][a-zA-Z0-9_]*;
