lexer grammar Lexicon;

LITENT : [0-9]+;

WHITESPACE : [ \t\r\n]+ -> skip;

IDENT : [A-Za-z]*[A-Za-z0-9]*;

READ : 'read';

PRINT : 'print';

INT : 'int';

FLOAT : 'float';

MAS : '+';

MENOS : '-';

IGUAL : '=';

PCOMA : ';';

LITREAL : [0-9]+.[0-9]+;

COMMENT : '#'.*? '\n' -> skip;
